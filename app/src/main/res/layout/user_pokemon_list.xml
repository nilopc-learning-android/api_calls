<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".users.ui.userpokemonlist.UserPokemonListActivity"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <TextView
        android:id="@+id/pokedexTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="PokÃ©dex"
        android:padding="12dp"
        android:layout_margin="0dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/userPokemonListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokedexTitle"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        tools:listitem="@layout/user_pokemon_list_row"
        android:layout_margin="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">

    </ListView>
</RelativeLayout>